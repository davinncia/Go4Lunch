<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_bitmap"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="32dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <ImageView
            android:id="@+id/iv_avatar_nav_drawer_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:src="@drawable/ic_log_out"/>

        <TextView
            android:id="@+id/tv_name_nav_drawer_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_size"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:layout_toEndOf="@+id/iv_avatar_nav_drawer_header"
            tools:text="Phillipe DUMAS"/>

        <TextView
            android:id="@+id/tv_mail_nav_drawer_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_text_size"
            android:maxLines="1"
            android:layout_alignStart="@+id/tv_name_nav_drawer_header"
            android:layout_below="@+id/tv_name_nav_drawer_header"
            tools:text="philipe.dumas@gmail.com"/>


    </RelativeLayout>

</LinearLayout>